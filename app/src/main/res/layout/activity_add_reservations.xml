<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddReservationsActivity">

    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Add Reservation"
        android:textColor="@color/BlueGrotto"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/saveButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/addNoteHeading"
        android:layout_marginEnd="6dp" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="395dp"
        android:layout_height="62dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginTop="14dp"
        android:background="@drawable/border"
        android:hint="Enter the Room No."
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="347dp"
        android:layout_height="427dp"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:gravity="top"
        android:hint="Enter the details"
        android:padding="12dp"
        android:textSize="18sp" />

</RelativeLayout>
